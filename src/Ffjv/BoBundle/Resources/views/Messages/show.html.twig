{% extends('@FfjvBo/layout.html.twig') %}
    {% set messagesMenu = true %}
    {% block breadcrumb %}
        <h1>
            <i class="fa fa-envelope"></i> message - {{ message.subject }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
            <li><a href="{{ path('bo_messages') }}"><i class="fa fa-envelope"></i> messages</a></li>
            <li class="active">{{ message.subject }}</li>
        </ol>
    {% endblock %}
    {% block content %}
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Read Mail</h3>
                            <div class="box-tools pull-right">
                                <a href="#" class="btn btn-box-tool" data-toggle="tooltip" title="Previous"><i class="fa fa-chevron-left"></i></a>
                                <a href="#" class="btn btn-box-tool" data-toggle="tooltip" title="Next"><i class="fa fa-chevron-right"></i></a>
                            </div>
                        </div>
                        <div class="box-body no-padding">
                            <div class="mailbox-read-info">
                                <h3>{{ message.subject }}</h3>
                                <h5>From: {{ message.authorUser }} <br/>
                                    To: {% if message.club is not null %}
                                            Club <a href="{{ path('clubs_show', {'id': message.club.id}) }}"><i class="fa fa-institution"></i> {{ message.club }}</a>
                                    {% elseif message.ligue is not null %}
                                            Ligue <a href="{{ path('ligues_show', {'id': message.ligue.id}) }}"><i class="fa fa-factory"></i> {{ message.ligue.title }}</a>
                                    {% elseif message.user is not null %}
                                            User <a href="{{ path('user_show', {'id': message.user.id}) }}"><i class="fa fa-user"></i> {{ message.user}}</a>
                                    {% else %}

                                    {% endif %}
                                    <span class="mailbox-read-time pull-right">{{ message.creationDate|date('d M Y H:i') }}</span></h5>
                            </div>
                            <div class="mailbox-read-message">
                                {{ message.message }}
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="pull-right">
                                <button class="btn btn-default"><i class="fa fa-reply"></i> Reply</button>
                                <button class="btn btn-danger"><i class="fa fa-bell"></i> signaler</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
