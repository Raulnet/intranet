{% extends('@FfjvBo/layout.html.twig') %}
{% set liguesMenu = true %}
{% block breadcrumb %}
    <h1>
        Intranet FFJV
        <small>Version 0.1</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
        <li class="active"><i class="fa fa-institution"></i> Clubs</li>
    </ol>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">User Board</h3> <a class="btn btn-info btn-xs pull-right" href="{{ path('ligues_new') }}">Create a new ligues</a>
                    </div>
                    <div class="box-body">
                        <table id="user_board" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Tag</th>
                                <th>Creationdate</th>
                                <th>Lastupdate</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ligue in ligues %}
                                <tr>
                                    <td><a href="{{ path('ligues_show', { 'id': ligue.id }) }}">{{ ligue.title }}</a></td>
                                    <td>{{ ligue.tag }}</td>
                                    <td>{% if ligue.creationDate %}{{ ligue.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if ligue.lastUpdate %}{{ ligue.lastUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Tag</th>
                                <th>Creationdate</th>
                                <th>Lastupdate</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block customCSS %}
    <link type="text/css" rel="stylesheet" href="{{ asset('public/lib/datatables/dataTables.bootstrap.css') }}">
{% endblock %}
{% block customJS %}
    <script src="{{ asset('public/lib/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('public/lib/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $('#user_board').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
{% endblock %}

