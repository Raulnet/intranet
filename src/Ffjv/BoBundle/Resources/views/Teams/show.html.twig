{% extends('@FfjvBo/layout.html.twig') %}
    {% set teamsMenu = true %}
    {% block breadcrumb %}
        <h1>
            {{ team.title }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
            <li><a href="{{ path('clubs_show', {'id': team.club.id}) }}"><i class="fa fa-institution"></i> {{ team.club }}</a></li>
            <li class="active"><i class="fa fa-users"></i> {{ team.title }}</li>
        </ol>
    {% endblock %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('public/img/logo/logo_ffjv.png') }}" alt="User profile picture">

                        <h3 class="profile-username text-center">{{ team.title }} - {{ team.tag }}</h3>
                        {% if team.licence %}<p class="text-muted text-center">Licence : {{ team.licence }}</p>{% endif %}
                        <p class="text-muted text-center"><a href="{{ path('clubs_show', {'id': team.club.id}) }}"><i class="fa fa-institution"></i> Club {{ team.club }}</a></p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Author</b><a class="pull-right">{{ team.user.firstname }} {{ team.user.lastname }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Membres</b><a class="pull-right">0</a>
                            </li>
                        </ul>
                        <a href="#" class="btn btn-primary btn-block"><b>Contact - club</b></a>
                    </div>
                </div>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">About {{ team.title }}</h3>
                    </div>
                    <div class="box-body">
                        <strong><i class="fa fa-envelope margin-r-5"></i> Contact</strong>

                        <p class="text-muted"></p>
                        <hr>
                        <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

                        <p class="text-muted">
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>

                        <p class="text-muted">
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#members" data-toggle="tab" aria-expanded="true">Membres</a></li>
                        <li><a href="#settings" data-toggle="tab">Settings</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="members">
                            <p>Membres</p>
                        </div>
                        <div class="tab-pane" id="settings">
                            <p>Settings</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block customCSS %}
    <link type="text/css" rel="stylesheet" href="{{ asset('public/lib/bootstrap-switch/css/bootstrap-switch.min.css') }}">
{% endblock %}
{% block customJS %}

{% endblock %}
