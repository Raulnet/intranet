{% extends('@FfjvFo/layout.html.twig') %}
{% block title %}FFJV-Profile {{ user.username }}{% endblock %}
    {% block customCSS %}
        <link rel="stylesheet" type="text/css" href="{{ asset('public/lib/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('public/lib/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('public/lib/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('public/lib/noty/css/animate.css') }}">

        <link rel="stylesheet" type="text/css" href="{{ asset('public/css/Fo/Profile/edit.css') }}">
    {% endblock %}
    {% block content %}
        <section class="content-header">
            <h2>{{ user.username }}</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
                <li><a href="{{ path('fo_profile_show', {'userUsername': app.user.username}) }}"><i class="fa fa-user"></i> Profile {{ user.username }}</a></li>
                <li class="active"><i class="fa fa-cog"></i> Edit password</li>
            </ol>
            <hr>
        </section>
        <section class="content">
            <div class="row">
                <div class="well">
                    {{ form_start(form, {'attr': {'class': 'form-signin form-horizontal'}}) }}
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                                {{ form_label(form.password.first, 'Password*', { 'label_attr':  {'class': 'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'password'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                                {{ form_label(form.password.second, 'Repeat-Password*', { 'label_attr':  {'class': 'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'repeat-password'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
                                <div class="col-sm-12">
                                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-success col-sm-8 col-sm-offset-2 col-xs-12'}}) }}
                                </div>
                            </div>

                        </div>
                        <p class="pull-right">*champ obligatoire</p>
                        <div class="clearfix"></div>
                    </div>
                    {{ form_end(form) }}
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>
    {% endblock %}