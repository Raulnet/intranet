{% extends('@FfjvFo/layoutManager.html.twig') %}
{% form_theme form 'FfjvFoBundle:Form:fields.html.twig' %}
{% set clubsMenu = true %}
{% set clubTitle = club.title %}
    {% block title %}FFJV-Club {{ club.title }}{% endblock %}
    {% block customCSS %}
        <link rel="stylesheet" type="text/css" href="{{ asset('public/css/Fo/Profile/show.css') }}">
    {% endblock %}
    {% block content %}
        <section class="content-header">
            <h2>{{ club.title }}</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
                <li class="active"><i class="fa fa-institution"></i> Club {{ club.title }}</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-sm-4 col-md-3">
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ asset('public/img/logo/logo_ffjv.png') }}" alt="User profile picture">

                            <h3 class="profile-username text-center">{{ club.title }} - {{ club.tag }}</h3>

                            <p class="text-muted text-center">RNA {{ club.rna }}</p>
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Author</b><a
                                            class="pull-right">{{ club.user.firstname }} {{ club.user.lastname }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Membres</b><a class="pull-right">0</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Teams</b><a class="pull-right"><span
                                                class="badge bg-light-blue-active">{{ club.teams|length }}</span> </a>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-primary btn-block"><b>Contact</b></a>
                        </div>
                    </div>
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">About club</h3>
                        </div>
                        <div class="box-body">
                            <strong><i class="fa fa-envelope margin-r-5"></i> Contact</strong>

                            <p class="text-muted">{{ club.email }}</p>
                            <hr>
                            <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

                            <p class="text-muted">
                                {{ club.address1 }}<br/>
                                {{ club.address2 }}<br/>
                                {{ club.zipcode }}, {{ club.city }}</p>
                            <hr>
                            <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>

                            <p class="text-muted">
                                {{ club.about }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 col-md-9">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Créer un nouveau membre</h3>
                        </div>
                        <div class="box-body">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            <div class="form-group">
                                {{ form_label(form.username, 'Utilisateur*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.username) }}
                                    {{ form_errors(form.username) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.firstName, 'Prenom*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.firstName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.lastName, 'Nom*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.lastName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.birthday, 'Date de Naissance*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.birthday) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.nationality, 'Nationalité', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.nationality) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.gender, 'Genre*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.gender) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email, 'Email*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telFix, 'Tel fix', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.telFix) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telMobile, 'Tel mobile', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.telMobile) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.address1, 'Adresse*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.address1) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.address2, 'Adresse sup.', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.address2) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.zipCode, 'Code postal*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.zipCode) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.city, 'Ville*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.countryAddress, 'Pays*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.countryAddress) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-success col-sm-6 col-xs-12'}}) }}
                                    <p class="pull-right">*champ obligatoire</p>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}