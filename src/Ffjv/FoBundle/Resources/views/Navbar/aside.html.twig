<section class="sidebar">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ asset('public/img/logo/logo_ffjv.png') }}" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
            <p>{{ app.user.firstname }} {{ app.user.lastname }}</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
    </div>
    <ul class="sidebar-menu">
        <li class="header">Intranet</li>
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home "></i> <span>Home</span></a></li>
        <li class="{% if userMenu is defined %}active{% endif %}"><a href="{{ path('fo_profile_show', {'userUsername': app.user.username }) }}"><i class="fa fa-user text-blue"></i> <span>Mon profile</span></a></li>
        <li class="treeview {% if clubsMenu is defined %}active{% endif %}">
            <a href="#">
                <i class="fa fa-institution"></i> <span>Clubs</span>
                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu">
                <li class="{% if clubsList is defined %}active{% endif %}"><a href="{{ path('fo_clubs_index') }}"><i class="fa fa-list"></i> Liste des clubs</a></li>
                {% if app.user.clubs|length < 1 %}<li><a href="{{ path('fo_clubs_new') }}"><i class="fa fa-edit"></i> Cr√©er un club</a></li>{% endif %}
                {% for club in app.user.clubs %}
                <li class="{% if (clubTitle is defined) and (clubTitle == club.title) %}active{% endif %}">
                    <a href="#"><i class="fa fa-university"></i> {{ club.title }} <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('fo_clubs_show', {'clubId': club.id} ) }}"><i class="fa fa-institution"></i> {{ club.title }}</a></li>
                        <li><a href="{{ path('fo_clubs_edit', {'clubId': club.id} ) }}"><i class="fa fa-edit"></i> Editer</a></li>
                        <li><a href="{{ path('fo_clubs_remove', {'clubId': club.id} ) }}"><i class="fa fa-trash"></i> Supprimer</a></li>
                    </ul>
                </li>
                {% endfor %}
            </ul>
        </li>
    </ul>
</section>