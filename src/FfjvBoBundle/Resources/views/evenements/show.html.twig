{% extends('@FfjvBo/layout.html.twig') %}
{% set eventsMenu = true %}
{% block breadcrumb %}
    <h1>
        Intranet FFJV
        <small>Version 0.1</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
        <li><a href="{{ path('ffjv_bo_evenements_index') }}"><i class="fa fa-star-o"></i> Evenement</a></li>
        <li class="active"> {{ evenement.title }}</li>
    </ol>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">{{ evenement.title }}</div>
                    <div class="panel-body table-responsive">
                        <table class="table table-bordered table-stripped">
                            <tbody>
                            <tr>
                                <th>Title</th>
                                <td>{{ evenement.title }}</td>
                            </tr>
                            <tr>
                                <th>Startdate</th>
                                <td>{% if evenement.startDate %}{{ evenement.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Enddate</th>
                                <td>{% if evenement.endDate %}{{ evenement.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Creationdate</th>
                                <td>{% if evenement.creationDate %}{{ evenement.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Lastupdate</th>
                                <td>{% if evenement.lastUpdate %}{{ evenement.lastUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ evenement.description }}</td>
                            </tr>
                            <tr>
                                <th>Place</th>
                                <td>{{ evenement.place }}</td>
                            </tr>
                            <tr>
                                <th>Address1</th>
                                <td>{{ evenement.address1 }}</td>
                            </tr>
                            <tr>
                                <th>Address2</th>
                                <td>{{ evenement.address2 }}</td>
                            </tr>
                            <tr>
                                <th>Zipcode</th>
                                <td>{{ evenement.zipCode }}</td>
                            </tr>
                            <tr>
                                <th>Idzipcode</th>
                                <td>{{ evenement.idZipCode }}</td>
                            </tr>
                            <tr>
                                <th>City</th>
                                <td>{{ evenement.city }}</td>
                            </tr>
                            <tr>
                                <th>Country</th>
                                <td>{{ evenement.country }}</td>
                            </tr>
                            <tr>
                                <th>Visibility</th>
                                <td>{{ evenement.visibility }}</td>
                            </tr>
                            <tr>
                                <th>Deleted</th>
                                <td>{% if evenement.deleted %}Yes{% else %}No{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Close</th>
                                <td>{% if evenement.close %}Yes{% else %}No{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Usesession</th>
                                <td>{% if evenement.useSession %}Yes{% else %}No{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Eventweezeventid</th>
                                <td>{{ evenement.eventWeezeventId }}</td>
                            </tr>
                            <tr>
                                <th>Author</th>
                                <td>{{ evenement.user }}</td>
                            </tr>
                            <tr>
                                <th>Id</th>
                                <td>{{ evenement.id }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="btn btn-group pull-left">
                            <a class="btn btn-default " href="{{ path('ffjv_bo_evenements_index') }}">retour</a>
                            <a class="btn btn-success" href="{{ path('ffjv_bo_evenements_edit', { 'id': evenement.id }) }}">Edit</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </section>
{% endblock %}
