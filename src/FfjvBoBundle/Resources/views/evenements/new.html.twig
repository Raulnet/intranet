{% extends('@FfjvBo/layout.html.twig') %}
{% form_theme form 'FfjvFoBundle:Form:fields.html.twig' %}
{% set eventsMenu = true %}
{% block breadcrumb %}
    <h1>
        Intranet FFJV
        <small>Version 0.1</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a> </li>
        <li><a href="{{ path('ffjv_bo_evenements_index') }}"><i class="fa fa-star-o"></i> Evenement</a></li>
        <li class="active"> creation</li>
    </ol>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Evenements creation</div>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.club, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.club) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.title, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.title) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.startDate, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.startDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.endDate, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.endDate) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.place, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.place) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.address1, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.address1) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.address2, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.address2) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.zipCode, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.zipCode) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.city, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.city) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.country, null, { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.country) }}
                            </div>
                        </div>
                        {{ form_widget(form) }}
                    </div>
                    <div class="panel-footer">
                        <a class="btn btn-default pull-left" href="{{ path('ffjv_bo_evenements_index') }}">Back to the list</a>
                        <input class="btn btn-success pull-right" type="submit" value="Create"/>
                        <div class="clearfix"></div>
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </section>
{% endblock %}
