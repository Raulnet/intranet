<div class="invoice-info">
    <div class="col-sm-4 invoice-col">
        <b><i class="glyphicon glyphicon-map-marker"></i>Adresse</b>
        <address>
            <strong>{{ event.venue.name }}.</strong><br>
            {{ event.venue.address }}<br>
            {{ event.venue.city }}, {{ event.venue.zip_code }}<br>
            {% if event.venue.country.name %}{{ event.venue.country.code }} - {{ event.venue.country.name }}<br>{% endif %}
        </address>
    </div>
    <div class="col-sm-4 invoice-col">
        <b><i class="fa fa-calendar"></i> Dates</b><br>
        <br>
        <b>Début :</b> {{ event.period.start|date('Y-M-d H:i') }} <br/>
        <b>Fin :</b> {{ event.period.end|date('Y-M-d H:i') }} <br/>
    </div>
    <div class="col-sm-4 invoice-col">
        <b><i class="fa fa-calendar-o"></i> Seances:</b><br>
        <br>
        {% if event.dates %}
            {% for seance in event.dates %}
                <b><i class="fa fa-calendar-o"></i></b> {{ seance.start|date('Y-M-d H:i') }}<br/>
            {% endfor %}
        {% else %}
            <i class="fa fa-calendar-times-o"></i> aucune seance définie
        {% endif %}
    </div>
</div>

    <div class="col-xs-12">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-primary">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ event.id }}" aria-expanded="true" aria-controls="collapse{{ event.id }}">
                            Tarif
                        </a>
                    </h4>
                </div>
                <div id="collapse{{ event.id }}" class="panel-collapse collapse in table-responsive" role="tabpanel" aria-labelledby="headingOne">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Participant</th>
                            <th>Quota</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in eventTickets.tickets %}
                            <tr>
                                <td>{{ ticket.name }}</td>
                                <td>€ {{ ticket.price }}</td>
                                <td><i class="fa fa-users"></i> {{ ticket.participants }}</td>
                                <td>{{ ticket.quotas }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% if eventTickets.categories is defined %}
                {% for category in eventTickets.categories %}
                    <div class="panel panel-info">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ category.id }}" aria-expanded="false" aria-controls="collapseOne">
                                    Tarif / {{ category.name }}
                                </a>
                            </h4>
                        </div>
                        <div id="collapse{{ category.id }}" class="panel-collapse collapse table-responsive" role="tabpanel" aria-labelledby="headingOne">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prix</th>
                                    <th>Participant</th>
                                    <th>Quota</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ticket in category.tickets %}
                                    <tr>
                                        <td>{{ ticket.name }}</td>
                                        <td>€ {{ ticket.price }}</td>
                                        <td><i class="fa fa-users"></i> {{ ticket.participants }}</td>
                                        <td>{{ ticket.quotas }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {% if category.categories is defined %}
                        {% for subCategory in category.categories %}
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ subCategory.id }}" aria-expanded="false" aria-controls="collapseOne">
                                            Tarif / {{ category.name }} / {{ subCategory.name }}
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse{{ subCategory.id }}" class="panel-collapse collapse table-responsive" role="tabpanel" aria-labelledby="headingOne">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Prix</th>
                                            <th>Participant</th>
                                            <th>Quota</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for ticket in subCategory.tickets %}
                                            <tr>
                                                <td>{{ ticket.name }}</td>
                                                <td>€ {{ ticket.price }}</td>
                                                <td><i class="fa fa-users"></i> {{ ticket.participants }}</td>
                                                <td>{{ ticket.quotas }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>

</div>

    <div class="col-xs-6">
        <p class="lead">Periode de vente</p>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th style="width:50%">Début</th>
                    <td>{{ event.sale_period.start }}</td>
                </tr>
                <tr>
                    <th>fin</th>
                    <td>{{ event.sale_period.end }}</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-xs-6">
        <p class="lead">Amount Due 2/22/2014</p>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th style="width:50%">Subtotal:</th>
                    <td>$250.30</td>
                </tr>
                <tr>
                    <th>Tax (9.3%)</th>
                    <td>$10.34</td>
                </tr>
                <tr>
                    <th>Shipping:</th>
                    <td>$5.80</td>
                </tr>
                <tr>
                    <th>Total:</th>
                    <td>$265.24</td>
                </tr>
            </table>
        </div>
    </div>

<div class="no-print">
    <div class="col-xs-12">
        <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
        <button class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Submit Payment</button>
        <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>
    </div>
</div>