{% extends('@FfjvBo/layout.html.twig') %}

{% block breadcrumb %}
    <h1>
        Intranet FFJV
        <small>Version 0.1</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
        <li><a href="{{ path('clubs_show', {'id': club.id}) }}"><i class="fa fa-institution"></i> {{ club.title }}</a></li>
        <li class="active"><i class="fa fa-institution"></i> create team</li>
    </ol>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Create new team</h3>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(form.title, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.title) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.tag, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.tag) }}
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a class="btn btn-default pull-right col-md-4 col-sm-5 col-xs-12" href="{{ path('clubs_show', {'id': club.id}) }}">Annuler</a>
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success col-md-4 col-sm-5 col-xs-12'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
