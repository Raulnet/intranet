{% extends('@FfjvBo/layout.html.twig') %}
{% set clubsMenu = true %}
{% block breadcrumb %}
    <h1>
        Intranet FFJV
        <small>Version 0.1</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('ffjv_fo_home_index') }}"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="{{ path('ffjv_bo_home_index') }}"><i class="fa fa-cogs"></i> Administration</a></li>
        <li><a href="{{ path('clubs') }}"><i class="fa fa-institution"></i> Clubs</a></li>
        <li class="active"><i class="fa fa-institution"></i> create</li>
    </ol>
{% endblock %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">Clubs creation</h3>
                        <a class="btn btn-default btn-sm pull-right" href="{{ path('clubs') }}">retour</a>
                    </div>
                    <div class="box-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_label(form.title, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.title) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.tag, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.tag) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.telFix, null, { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
