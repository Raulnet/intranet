{% extends('::base.html.twig') %}
{% block title %}FFJV - Intranet{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('public/lib/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    {% stylesheets filter="scssphp" output="css/app.css"
    "public/scss/wc/main.scss" %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
    <script src="{{ asset('public/lib/webcomponentsjs/webcomponents-lite.min.js') }}"></script>
    <link rel="import" href="{{ asset('public/lib/polymer/polymer.html') }}">
    <link rel="import" href="{{ asset('public/lib/app-layout/app-layout.html') }}">
    <link rel="import" href="{{ asset('public/lib/app-layout/app-scroll-effects/effects/waterfall.html') }}">
    <link rel="import" href="{{ asset('public/lib/iron-selector/iron-selector.html') }}">
    <link rel="import" href="{{ asset('public/lib/iron-icons/iron-icons.html') }}">
    <link rel="import" href="{{ asset('public/lib/paper-dialog/paper-dialog.html') }}">
    <link rel="import" href="{{ asset('public/lib/iron-dropdown/iron-dropdown.html') }}">
    {% block webComponent %}
    {% endblock %}
    {% block customCSS %}
    {% endblock %}
{% endblock %}
{% block javascripts %}
    {% javascripts filter="?jsqueeze" output="js/app.js"
    'public/js/webcomponent/layout.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    {% block customJS %}{% endblock %}

{% endblock %}
{% block classbody %}{% endblock %}
{% block body %}
    <app-header-layout>
        {% block header %}
            {% block navbar %}
                {{ include('WebComponentBundle:navbar:_navbar.html.twig') }}
            {% endblock %}
        {% endblock %}
        {% block aside %}
        {% endblock %}
        {% block breadcrumb %}

        {% endblock %}
        <div class="container">
            {% block content %}

            {% endblock %}
        </div>

        {% block footer %}

        {% endblock %}
    </app-header-layout>
    {% block modal %}
        <paper-dialog id="dialog_logout" modal>
            <h2>Déconnexion</h2>
            <p>Vous êtes sur le point de vous déconnecter</p>
            <div class="buttons">
                <a dialog-dismiss>Annuler</a>
                <a href="{{ path('logout') }}">confirmer</a>
            </div>
        </paper-dialog>
        {% block customModal %}
        {% endblock %}
    {% endblock %}
{% endblock %}