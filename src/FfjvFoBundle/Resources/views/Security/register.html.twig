                            {{ form_widget(form.nationality) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.gender, 'Genre*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.gender) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, 'Email*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.telFix, 'Tel fix', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
