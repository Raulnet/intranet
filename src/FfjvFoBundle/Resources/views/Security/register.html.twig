{% extends('@FfjvFo/layout.html.twig') %}
{% form_theme form 'FfjvFoBundle:Form:fields.html.twig' %}
{% trans_default_domain 'fo_security_registering' %}
    {% block title %}Ffjv-{{ "fo.security.registering.title"|trans }}{% endblock %}
    {% block customCSS %}
        <link type="text/css" rel="stylesheet" href="{{ asset('public/lib/bootstrap-switch/css/bootstrap-switch.min.css') }}">
        {% stylesheets filter="scssphp" output="css/app.css"
        "public/scss/core/core.scss"
        "public/scss/Fo/Home/index.scss"
        "public/scss/Fo/Security/register.scss"
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        {% endstylesheets %}
    {% endblock %}
{% block customJS %}
    <script src="{{ asset('public/lib/bootstrap-switch/js/bootstrap-switch.js') }}"></script>
    <script>
        $.fn.bootstrapSwitch.defaults.size = 'small';
        $.fn.bootstrapSwitch.defaults.onColor = 'primary';
        $.fn.bootstrapSwitch.defaults.labelText = 'Accepter';
        $.fn.bootstrapSwitch.defaults.onText = 'Oui';
        $.fn.bootstrapSwitch.defaults.offText = 'Non';
        $("#create_user_cgu").bootstrapSwitch();
    </script>
{% endblock %}
    {% block content %}
        <div class="main-wrapper">
            <h4 class="text-center">{{ block('title') }}</h4>
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="well z-depth-1">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.username, 'Utilisateur*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.username) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstName, 'Prenom*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.firstName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastName, 'Nom*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.lastName) }}
                        </div>
                    </div>
                    <div class="form-group">
