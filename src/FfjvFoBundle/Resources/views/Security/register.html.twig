                    {# ****** CGU_FORM ****** #}
                    <div class="form-group">
                        <label class="col-xs-2 label_title" for="cgu"><a data-toggle="modal" data-target="#cgu">CGU*</a></label>
                        <div id="cgu_container" class="col-xs-10">
                            {{ form_widget(form.cgu) }}
                        </div>
                    </div>
                    {# ****** ./CGU_FORM ****** #}
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-success col-sm-3 col-xs-12'}}) }}
                            <p class="pull-right">*champ obligatoire</p>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
                <div class="clearfix"></div>
            </div>
        </div>
    {% endblock %}