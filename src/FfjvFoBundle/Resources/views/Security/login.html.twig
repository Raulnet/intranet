{% extends('@FfjvFo/layout.html.twig') %}

{% block title %}Login{% endblock %}
   {% block customCSS %}
       <link media="screen" rel="stylesheet" type="text/css" href="{{ asset('public/css/Fo/Home/index.css') }}">
       <link media="screen" rel="stylesheet" type="text/css" href="{{ asset('public/css/Fo/Home/register.css') }}">
   {% endblock %}
{% block content %}
    <div class="main-wrapper">
        <h4 class="text-center">{{ block('title') }}</h4>
        <div class="well col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 z-depth-1">
            <div class="col-xs-12">
                {% if error %}
                    <div class="alert alert-danger">
                        <strong>Login failed!</strong> {{ error.message}}
                    </div>
                {% endif %}
                <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Entrer votre email" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="_password" class="form-control" placeholder="Entrer votre mot de passe" required>
                    </div>
                    <div class="form-group">
                        <a href="#" data-toggle="modal" data-target="#lostPassword">mot de passe oubli√© ?</a>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="modal fade" id="lostPassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mot de passe perdu ?</h4>
                </div>
                {{ form_start(emailForm, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="modal-body">
                    <div class="form-group">
                        {{ form_label(emailForm.email, 'Email*', { 'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(emailForm.email) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    {{ form_widget(emailForm.submit) }}
                </div>
                {{ form_end(emailForm) }}
            </div>
        </div>
    </div>
{% endblock %}